<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/openUrlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="웹페이지로 이동" />

        <TextView
            android:id="@+id/mainIngredientTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주재료" />

        <TableLayout
            android:id="@+id/mainIngredientTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subIngredientTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부재료" />

        <TableLayout
            android:id="@+id/subIngredientTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/alternativeIngredientTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대체재료" />

        <TableLayout
            android:id="@+id/alternativeIngredientTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>